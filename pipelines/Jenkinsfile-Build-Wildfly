pipeline {
  environment {
    registry = "registry.citsmartcloud.com/templates/wildflycitsmart"
    registryCredential = 'registry_superuser'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git branch: 'master', credentialsId: 'git-aws-codecommit', url: 'https://git-codecommit.us-west-2.amazonaws.com/v1/repos/wildflycitsmart'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Create container'){
    step([$class: 'DockerComposeBuilder', dockerComposeFile: 'docker-compose-build.yml', option: [$class: 'StartService', scale: 1, service: 'citSMART'], useCustomDockerComposeFile: true])
    }
     stage('Push registry') {
      steps{
        script {
          docker.withRegistry( 'https://registry.citsmartcloud.com', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Remove docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }
  }
}
